generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

generator types {
  provider = "prisma-client-js"
  output   = "../../../packages/types/prisma-generated"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

enum OrigenAlerta {
  ATT
  FELCV
}

enum EstadoAlerta {
  EN_PELIGRO
  EN_CAMINO
  ATENDIDO
}

enum TipoAlerta {
  EMERGENCIA
  INCIDENTE
  MANTENIMIENTO
  INFORMATIVO
  ROBO
  VIOLENCIA
  ACCIDENTE
  OTRO
}

model Funcionarios {
  id         String    @id @default(uuid())
  grado      String
  nombres    String
  ap_paterno String
  ap_materno String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  atencion_funcionario AtencionFuncionario[]

  @@map("funcionarios")
}

model Persona {
  id                 BigInt    @id @default(autoincrement())
  uuid               String?
  nombres            String
  ap_paterno         String
  ap_materno         String
  ci                 String
  fecha_nac          DateTime
  celular            String
  correo             String
  empresa_telefonica String
  created_at         DateTime  @default(now())
  updated_at         DateTime  @updatedAt
  deleted_at         DateTime?

  contactos_ref ContactoRef[]
  alertas       Alerta[]

  @@map("personas")
}

model ContactoRef {
  id         BigInt    @id @default(autoincrement())
  id_persona BigInt
  nombre     String
  relacion   String
  celular    String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  persona Persona @relation(fields: [id_persona], references: [id])

  @@map("contactos_ref")
}

model Evento {
  id             BigInt    @id @default(autoincrement())
  id_alerta      BigInt
  id_funcionario String
  id_seguimiento String?
  fecha_hora     DateTime
  comentario     String
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  deleted_at     DateTime?

  alerta Alerta @relation(fields: [id_alerta], references: [id])

  @@map("eventos")
}

model Alerta {
  id           BigInt            @id @default(autoincrement())
  uuid         String
  id_persona   BigInt
  id_municipio String?
  fecha_hora   DateTime
  nro_caso     String
  estado       EstadoAlerta
  origen       OrigenAlerta?
  created_at   DateTime          @default(now())
  updated_at   DateTime          @updatedAt
  deleted_at   DateTime?
  persona      Persona           @relation(fields: [id_persona], references: [id])
  atencion     Atencion?
  cierre       CierreAlerta?
  ubicaciones  UbicacionAlerta[]
  eventos      Evento[]

  @@unique([uuid, origen])
  @@map("alertas")
}

model Atencion {
  id                  BigInt    @id @default(autoincrement())
  id_alerta           BigInt    @unique
  usuario_despachador String
  id_vehiculo         String
  sigla_radio         String?
  created_at          DateTime  @default(now())
  updated_at          DateTime  @updatedAt
  deleted_at          DateTime?

  alerta                  Alerta                 @relation(fields: [id_alerta], references: [id])
  atencion_funcionario    AtencionFuncionario[]
  ubicaciones_funcionario UbicacionFuncionario[]

  @@map("atenciones")
}

model AtencionFuncionario {
  id             BigInt    @id @default(autoincrement())
  id_atencion    BigInt
  id_funcionario String?
  encargado      Boolean
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  deleted_at     DateTime?

  atencion    Atencion      @relation(fields: [id_atencion], references: [id])
  funcionario Funcionarios? @relation(fields: [id_funcionario], references: [id])

  @@map("atencion_funcionario")
}

model UbicacionAlerta {
  id         BigInt    @id @default(autoincrement())
  id_alerta  BigInt
  fecha_hora DateTime
  latitud    Decimal
  longitud   Decimal
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  alerta Alerta @relation(fields: [id_alerta], references: [id])

  @@map("ubicacion_alertas")
}

model CierreAlerta {
  id             BigInt     @id @default(autoincrement())
  id_alerta      BigInt     @unique
  id_funcionario String
  fecha_hora     DateTime
  comentario     String
  tipo_alerta    TipoAlerta
  estado_victima String
  nombre_agresor String
  ci_agresor     String
  created_at     DateTime   @default(now())
  updated_at     DateTime   @updatedAt
  deleted_at     DateTime?

  alerta Alerta @relation(fields: [id_alerta], references: [id])

  @@map("cierres_alerta")
}

model UbicacionFuncionario {
  id          BigInt    @id @default(autoincrement())
  id_atencion BigInt
  fecha_hora  DateTime
  latitud     Decimal
  longitud    Decimal
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?

  atencion Atencion @relation(fields: [id_atencion], references: [id])

  @@map("ubicacion_funcionarios")
}
